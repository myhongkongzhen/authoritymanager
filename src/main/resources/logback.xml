<configuration>

    <property name="BaseLogPath" value="target"/>
    <property name="ErrorStart"
              value="-------------------------------------------------------Error Start--------------------------------------------------------"/>
    <property name="ErrorEnd"
              value="--------------------------------------------------------Error End---------------------------------------------------------"/>

    <appender name="commonFile"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${BaseLogPath}/logs/infoFile.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${BaseLogPath}/logs/infoFile.log.%d{yyyy-MM-dd}
            </FileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}][%t]%5level[%logger{15}] - %m %n</pattern>
        </encoder>
    </appender>

    <!-- 文件記錄錯誤日誌 ERROR 簡單記錄 -->
    <appender name="errorFile"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${BaseLogPath}/logs/errorFile.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>
                ${BaseLogPath}/logs/errorFile.log.%i
            </fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>6</maxIndex>
        </rollingPolicy>
        <triggeringPolicy
                class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>100MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>
                <![CDATA[ %n[%d{yyyy-MM-dd HH:mm:ss.SSS}] ${ErrorStart}%n [%t] %m [%logger:%L]%n[%d{yyyy-MM-dd HH:mm:ss.SSS}] ${ErrorEnd}%n%n ]]></pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>[%d{HH:mm:ss.SSS}][%5level][%t][%logger{15}:%L] -【%m】%n%n</pattern>
        </layout>
    </appender>

    <logger name="zzwu.std" level="info"/>
    <!-- mybatis sql 日誌 -->
    <logger name="zzwu.std.demo.dao" level="debug"/>

    <root level="error">
        <appender-ref ref="commonFile"/>
        <appender-ref ref="errorFile"/>
        <appender-ref ref="console"/>
    </root>

</configuration>

